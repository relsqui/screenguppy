"""

import datetime

RFISH="><Îµ*>"
LFISH="<*3><"
WIDTH=80 - len(RFISH)
SPEED=2

def tri_wave(x, period):
    y = x % period - period/2
    if y < 0:
        asc = False
    else:
        asc = True
    return int(abs(y)), asc

def fish(forward):
    if forward:
        return RFISH
    else:
        return LFISH

spaces, forward = tri_wave(int(datetime.datetime.now().timestamp() * SPEED), WIDTH)
print(fish(forward).rjust(spaces).ljust(WIDTH-spaces))
